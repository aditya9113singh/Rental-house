<%layout("/layouts/boilerplate")%>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h2>Listing Details</h2>
        </div>
    <div class="card col-6 offset-3 listing-card" style="width: 18rem;">
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <%=listing.title%><br>
            <%=listing.price.toLocaleString("en-IN")%><br>
            <%=listing.description%><br>
            <%=listing.location%><br>
            <%=listing.country%>
        </p>
        </div>
    </div>
    
</div>
<div class="btns">
    <a href="/listings/<%=listing._id%>/edit" style="background-color: rgb(226, 60, 60);" class="btn btn-dark col-1 offset-3">edit</a>


    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button style="background-color: rgb(65, 63, 63);" class="btn btn-dark offset-5 ">delete</button>
    </form>
</div>

<div class="col-8 offset-3 mt-4">
        <h4>Leave a review</h4>
        <form action="/listings/<%=listing._id%>/reviews" method="POST">
            <div class="mb-3 mt-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
            </div>
            <div class="mb-3 mt-3">
                <label class="form-label" for="comment">Comments</label>
                <textarea class="form-control" id="comment" name="review[comment]" cols="30" rows="5" required></textarea>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form><hr>
        
<h4>All Reviews</h4>
<div class="row">
    <%for(review of listing.reviews){%>
        <div class="card col-5">
            <div class="card-body">
                <h5 class="card-title">Mary Rose</h5>
                <p class="card-text">Comment - <%=review.comment%></p>
                <p class="card-text">Rating - <%=review.rating%>&#9733;</p>
                <form class="mb=3 "method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" >
                    <button class="btn btn-sm btn-danger">delete</button>
                </form>
            </div>
        </div>
        
<%}%>
</div>

</div>

